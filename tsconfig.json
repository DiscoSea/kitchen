{
  "compilerOptions": {
    "outDir": "./dist", // Output compiled JavaScript files here
    "rootDir": "./src", // Keep source files in src/
    "target": "ES6", // Modern JavaScript output
    "module": "CommonJS", // Compatibility with Node.js and NPM
    "strict": true, // Enforce strict type checking
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all TypeScript files in src/
  "exclude": ["node_modules", "dist"] // Exclude these folders from compilation
}
